<?xml version="1.0" encoding="utf-8"?>
<!-- <android.support.constraint.ConstraintLayout -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="20px"
    android:textStyle="bold" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textImeMultiLine"
        android:layout_marginTop="50dp"
        android:text="@string/login"
        android:textSize="20sp"
        android:id="@+id/txtLogin"
        />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:inputType="textImeMultiLine"
        android:layout_toRightOf="@id/txtLogin"
        android:id="@+id/edtTxtLogin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@id/txtLogin"
        android:inputType="textImeMultiLine"
        android:text="@string/senha"
        android:textSize="20sp"
        android:id="@+id/txtSenha"
        />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/txtLogin"
        android:inputType="textPassword"
        android:layout_toRightOf="@id/txtLogin"
        android:id="@+id/edtPswSenha"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@id/txtSenha"
        android:inputType="textImeMultiLine"
        android:text="@string/unidadeNegocio"
        android:textSize="20sp"
        android:id="@+id/txtUnidadeNegocio"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@id/txtSenha"
        android:layout_marginLeft="90dp"
        android:layout_toRightOf="@id/txtLogin"
        android:inputType="textImeMultiLine"
        android:id="@+id/edtTxtUnidadeNegocio"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtTxtUnidadeNegocio"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:text="@string/btnAcessar"
        android:backgroundTint="@color/colorCinza"
        android:id="@+id/btnAcessar" />


</RelativeLayout>